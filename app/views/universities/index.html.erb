<p id="notice"><%= notice %></p>

<h1>Listing Universities</h1>

<%= render 'application/search_form' %>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.name %></td>
        <td><%= university.country&.name %></td>
        <td><%= university.language&.name %></td>
        <td><%= link_to '詳細を見る', university %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New University', new_university_path %>
